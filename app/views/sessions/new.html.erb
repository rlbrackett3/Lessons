<h3>Sign In Form</h3>
<%= form_tag sessions_path do %>
  <fieldset>
    <div class="fields">
      <%= label_tag :email %><%= text_field_tag :email, params[:email] %>
      <%= label_tag :password %><%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag "Sign in", id: "sign-in", name: "sign-in", class: "form_submit", disabled: false, disable_with: "Please wait..." %>
    </div>
  </fieldset>
<% end %>
