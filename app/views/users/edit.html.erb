<%= form_for @user, html: { class: "my-forms" } do |f| %>
  <div class="field">
    <%= f.label :fname, "First Name" %>
    <%= f.text_field :fname %>

    <%= f.label :lname, "Last Name" %>
    <%= f.text_field :lname %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>
    
    <%= f.submit :submit %>
<% end %>