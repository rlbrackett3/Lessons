<h1>Users Index</h1>

<% @colors.each do |c| %>
  <p style="color: <%= c %>"><%= c %></p>
<% end %>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user_path(user) %>&nbsp;&nbsp;&nbsp;&nbsp;
      <%= link_to "Delete User", user_path(user), method: :delete %>
    </li>
  <% end %>
</ul>


