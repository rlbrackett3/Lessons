<h3>Create a New User</h3>

<%=form_for @user do |f| %>
  <%=f.label :email %>
  <%=f.text_field :email %>

  <%=f.label :password %>
  <%=f.password_field :password %>

  <%=f.label :password_confirmation %>
  <%=f.password_field :password_confirmation %>

  <%=f.label :phone %>
  <%=f.text_field :phone %>
  
  <%=f.submit "Sign Up" %>
<%end%>